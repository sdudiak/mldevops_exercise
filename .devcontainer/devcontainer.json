{
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"cacheFrom": [
			"mcr.microsoft.com/devcontainers/python:1-3.12-bullseye"
		]
	},
	"runArgs": [
		"--env",
		"DISPLAY",
		"--env",
		"QT_X11_NO_MITSHM=1",
		"--volume",
		"/tmp/.X11-unix:/tmp/.X11-unix"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	}
}