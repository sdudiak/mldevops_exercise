{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"postCreateCommand": "pip3 install --user -r requirements.txt",
	"runArgs": [
		"--env",
		"DISPLAY",
		"--env",
		"QT_X11_NO_MITSHM=1", // Prevents some display issues with Qt
		"--volume",
		"/tmp/.X11-unix:/tmp/.X11-unix" // Shares the X11 socket
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	}
}